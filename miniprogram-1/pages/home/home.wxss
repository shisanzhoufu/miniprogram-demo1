/* header */
.header{
width: 750rpx;
height: 90rpx;
}
.conHe {
display: flex;
justify-content: space-between;  
align-items: center;
height: 100%;
}
.conHe navigator,.conHe .kefu{
  height: 50rpx;
}
.conHe image{
  height: 100%;
}
.kefu{
  position: relative;
  animation: dh linear 1.5s infinite;
}
.kefu .btn{
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  opacity: 0;
}

/* banner */
.banner{
  width: 100%;
  height: 295rpx;
}
.banner swiper{
  height: 100%;
  width:100%;
}
.banner image{
  height: 295rpx;
  width: 100%;
}

/* major */
.major{
  white-space: nowrap;
}
.major .pic{
  width: 100rpx;
  height: 100rpx;
}
.major .box{
  width: 150rpx;
  display: inline-block;
  text-align: center;
  margin: 20rpx 0;
}
.major .txt{
  font-size: 26rpx;
  margin-top: 10rpx;
}



.works{
  padding: 90rpx 0 70rpx;
  background-color: #f0f3f8;
}

.wkMain{
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}
.wkMain .box{
  width: 344rpx;
  height: 212rpx;
  margin-bottom: 10rpx;
  position: relative;
}
.wkMain .pic{
  width: 100%;
  height: 100%;
}
.wkMain .ceng{
  background-color:rgba(0,0,0,0.35);
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  color: white;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 0 20rpx;
  flex-direction: column;
  box-sizing: border-box;
} 
.wkMain .line{
  width: 40rpx;
  height: 5rpx;
  background-color: white;
  margin: 10rpx 0 20rpx;
}

.wkMain .des{
  opacity: 0.6;
  font-size: 22rpx;
  text-transform: uppercase;
  text-align: center;
}
.dynamic{
  padding: 90rpx,0,70rpx;
}
.dyItem{
  display: flex;
  padding: 15rpx 0 ;
  border:1rpx dashed #f4f4f4; 
  justify-content: space-between;
}
.dyItem .pic{
  width: 230rpx;
  height: 150rpx;
}
.dyItem .pic image{
  width: 100%;
  height: 100%;
}
.dyItem .txt{
  width: 440rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.dyItem .title{
  font-size: 34rpx;
}
.dyItem .info{
  font-size: 26rpx;
  color: #888;
}
