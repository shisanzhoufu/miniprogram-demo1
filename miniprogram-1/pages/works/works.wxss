/* header */
.header{
  width: 750rpx;
  height: 90rpx;
  }
  .conHe {
  display: flex;
  justify-content: space-between;  
  align-items: center;
  height: 100%;
  }
  .conHe navigator,.conHe .kefu{
    height: 50rpx;
  }
  .conHe image{
    height: 100%;
  }
  .kefu{
    position: relative;
    animation: dh linear 1.5s infinite;
  }
  .kefu .btn{
    position: absolute;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    opacity: 0;
  }
  
/* nav */
.nav {
  white-space: nowrap;
  /* height: 100rpx; */
  display: flex;
  flex-direction: row;
}
.nav .navBar{
  width: 150rpx;
  display: inline-block;
  text-align: center;
  margin: 20rpx 0;
}
.nav .txt{
  font-size: 26rpx;
  margin-top: 10rpx;
}

/* works */
.works{
  padding: 50rpx 0 50rpx;
  background-color: #f0f3f8;
  
}
.works .container{
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}
.works .box{
  /* padding: 90rpx 0 70rpx; */
  background-color: #fff;
  width: 340rpx;
  height: 400rpx;
  margin-bottom: 20rpx;
  border-radius: 20rpx;
  
  flex-wrap: wrap;
}
.works .pic{
  width: 100%;
  height: 65%;
  /* flex: 1; */
}
.works .txt{
  font-size: 26rpx;
}
.works .des{
  color: #666;
  font-size: 18rpx;
  justify-content: space-between;
  display: flex;
  margin: 20rpx 5rpx;
  box-sizing: border-box;
}